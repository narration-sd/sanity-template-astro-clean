---
import { urlFor } from "../utils/image";

type Asset = Parameters<typeof urlFor>[0];

  export interface Props {
    asset: Asset;
    alt: string;
    width: number;
    height: number;
  }

  // *todo* defaulting width, per discussion in utils/portableText/Readme
  const { asset, alt, width = 640, height = 480 } = Astro.props;
  const image = urlFor(asset).width(width).height(height).url();
---

  <img src={image} alt={alt} />
