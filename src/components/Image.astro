---
import { urlFor } from "../utils/image";


  export interface Props {
    asset: object;
    alt: string;
    width?: number;
    height?: number;
    className?: string;
    style?: string;
  }

  // *todo* defaulting width, per discussion in utils/portableText/Readme
  const { asset, alt, width = 640, height = 480,
    className="", style = "" } = Astro.props;
  const image = urlFor(asset).width(width).height(height).url();
---

  <img src={image} class={className} style={style} alt={alt} />
